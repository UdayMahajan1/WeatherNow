<%- include('partials/header') %>

    <nav class="container-fluid text-center my-5 ">
        <h1> Today's Weather Conditions.. </h1>
    </nav>

    <form action="/" method="post">
        <div class="container mx-auto my-3">
            <div class="row g-2">
            <% for(let i = 0 ; i < 4 ; i++) { %>
                <div class="col-6">
                    <div class="position-relative m-1 p-3 border rounded-4">
                        <h3> <%= data[i].cityName %> <%= data[i].temp %> Â°C. </h3>
                        <p> <%= data[i].weatherDesc %></p>
                        <img src="http://openweathermap.org/img/wn/<%=data[i].icon %>@2x.png" alt="Not Found :(">
                        <div class="position-absolute bottom-0 end-0 mb-3 me-3">
                            <input type="text" name="<%=i%>" placeholder="View another city">
                            <button type="submit" class="btn btn-info">Go</button>
                        </div>
                    </div>
                </div>
            <% } %>
            </div>
        </div>
    </form>

    <div class="container mt-5 text-center">
        <form action="/resetCities" method="post">
            <div class="mx-auto">
                <button type="submit" class="btn btn-primary btn-lg">Reset cities</button>
            </div>
        </form>
    </div>

<%- include('partials/footer') %>