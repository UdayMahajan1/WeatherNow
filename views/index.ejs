<body>

    <div class="container-fluid text-center">
        <h1> Today's Weather Conditions.. </h1>
    </div>

    <% data.forEach((city)=> { %>
    <div>
        <h3> The temperature in <%= city.cityName %> is <%= city.temp %> degree celcius. </h3>
        <p> Weather description : <%= city.weatherDesc %></p>
        <img src="http://openweathermap.org/img/wn/<%=city.icon %>@2x.png">
    </div>
    <% }) %>

    <div>
        <form action="/getWeather" method="post">
            <label for="cityInput">Name of the city : </label>
            <input id="cityInput" type="text" name="cityName">
            <button type="submit">Go</button>
        </form>
    </div>

</body>

